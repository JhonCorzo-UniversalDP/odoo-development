<odoo>
    <record id="rule_loan_application_user" model="ir.rule">
        <field name="name">Loan Application: User Access</field>
        <field name="model_id" ref="model_loan_application"/>
        <field name="domain_force">[('state','in',['signed'])]</field>
        <field name="groups" eval="[(4, ref('financing_user'))]"/>
    </record>

    <record id="rule_loan_application_admin" model="ir.rule">
        <field name="name">Loan Application: Admin Access</field>
        <field name="model_id" ref="model_loan_application"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('financing_admin'))]"/>
    </record>

    <record id="rule_loan_application_sales" model="ir.rule">
        <field name="name">Sales users can read loan applications</field>
        <field name="model_id" ref="model_loan_application"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>