<odoo>
    <!-- Acción para definir vistas disponibles al dar click en un menu o boton del modelo loan.application  -->
    <record id="loan_application_document_type_action" model="ir.actions.act_window">
        <field name="name">Loan Application Documents Type</field>
        <field name="res_model">loan.application.document.type</field>
        <!-- El orden indica cual es la vista que será mostrada primero al realizar la acción -->
        <field name="view_mode">list,form</field> 
    </record>

    <record id="loan_application_document_type_list_view" model="ir.ui.view">
        <field name="name">loan.application.document.type.view.list</field>
        <field name="model">loan.application.document.type</field>
        <field name="arch" type="xml">
            <list string="Document Type List">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="loan_application_document_type_form_view" model="ir.ui.view">
        <field name="name">loan.application.document.type.view.form</field>
        <field name="model">loan.application.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
            

</odoo>