<odoo>
    <record id="view_order_form_inherit_loan" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.loan</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="apply_loan" string="Apply Loan" type="object" invisible="state != 'draft'" class="btn-primary"/>
            </xpath>

            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,sale,loan_pending,done</attribute>
            </xpath>

            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="is_financed"/>
            </xpath>

            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Loan Applications" name="loan_application_ids">
                    <field name="loan_application_id"/>
                </page>
            </xpath>
        </field>    
    </record>

</odoo>